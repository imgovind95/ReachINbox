// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Data Models ---

// User Account Model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  googleId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  jobs      EmailJob[]
}

// Scheduled Email Job Model
model EmailJob {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  recipient       String
  subject         String
  body            String
  
  // Job Status: 'PENDING' | 'COMPLETED' | 'FAILED' | 'DELAYED'
  status          String   @default("PENDING") 
  
  scheduledAt     DateTime
  sentAt          DateTime?
  messageId       String? // Email provider message ID
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Advanced Tracking & Metadata
  jobId           String? // Linked BullMQ Job ID
  attachments     Json?   // Array of attachment metadata objects
  previewUrl      String? // URL for previewing the email (dev mode)
}

// Rate Limiting Model (Optional / Future Use)
model RateLimit {
  id        String   @id @default(uuid())
  userId    String
  windowStart DateTime
  count     Int      @default(0)
  
  @@unique([userId, windowStart])
}
